<?xml version="1.0" encoding="utf-8"?>
<manifest package="sprinklerconfig.ulduzsoft.com.sprinklerconfig"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SprinklerConfig">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddZoneActivity"
            android:label="SprinklerConfig" >
        </activity>
        <activity
            android:name=".activities.AddProgramActivity"
            android:label="SprinklerConfig" >
        </activity>

    </application>

</manifest>